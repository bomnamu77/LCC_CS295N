@model List<Community.Models.Message>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <title>Locations</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
        <h2>Message Sent List</h2>
        <table class="table table-sm table-striped table-bordered" border="1">
            <thead>
                <tr>
                    <th>Receiver Name</th>
                    <th>Receiver Email</th>
                    <th>Time</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Message message in Model)
                {
                <tr>
                    <td>@message.To.Name</td>
                    <td>@message.To.Email</td>
                    <td>@message.TimeStamp</td>
                    <td>@message.Text</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    
    <a href="InputMessage">Send New Message</a> |
    <a href="/Home">Home</a>
</body>
</html>
