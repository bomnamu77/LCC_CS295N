

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reply Message</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Reply Message</h4></div>
        <div class="panel-body">
            <form method="post">
               
                <div class="form-group">
                    <label>Message Priority:</label>
                    <input type=radio name="priority" value="1" checked/>
                    <label for="priority">Low</label>
                    <input type=radio name="priority" value="2" />
                    <label for="priority">Medium</label>
                    <input type=radio name="priority" value="3" />
                    <label for="priority">High</label>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>