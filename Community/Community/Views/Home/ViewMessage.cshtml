@model Community.Models.Message
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Message View</title>
</head>
<body>
    <p>
        <h2>Thanks, please check your message</h2><br />

        <h3>From : @Model.From.Name ( @Model.From.Email )</h3><br />

        <h3>To: @Model.To.Name ( @Model.To.Email )</h3><br />
        
        <h3>Message : @Model.Text</h3>
    </p>
    <br />

    <a asp-href="ListSentMessage">Messages Sent</a>
</body>
</html>