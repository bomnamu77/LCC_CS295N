@model List<Community.Models.Message>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <title>Locations</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
        <h2>Message Received List</h2>
        <table class="table table-sm table-striped table-bordered" border="1">
            <thead>
                <tr>
                    <th>Sender Name</th>
                    <th>Sender Email</th>
                    <th>Time</th>
                    <th>Message</th>
                    <th>Reply</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Message message in Model)
                {
                    <tr>
                        <td>@message.From.Name</td>
                        <td>@message.From.Email</td>
                        <td>@message.TimeStamp</td>
                        <td>@message.Text</td>
                        <td><a asp-action="ReplyMessage" asp-route-msgid="@message.MsgID">Reply</a></td>
                    </tr>
                    @if (message.Replies.Count > 0)
                    {
                    @foreach (Message r in message.Replies)
                    {
                    <tr>
                        <td>=> @r.From.Name</td>
                        <td>@r.From.Email</td>
                        <td>@r.TimeStamp</td>
                        <td>@r.Text</td>
                        <td></td>
                        <!--td><a asp-action="ReplyMessage" asp-route-msgid="@r.MsgID">Reply</a></td-->
                    </tr>
                    }
                        }
                    }
            </tbody>
        </table>
    </div>
    
    <a href="InputMessage">Send New Message</a> |
    <a href="/Home">Home</a>
</body>
</html>
