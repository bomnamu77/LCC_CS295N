@model List<People>
@{
    Layout = null;
}

<head>

    <title>People</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

    <h2>People</h2>
    <h3>Significant people and links if available</h3>
    <table class="table table-sm table-striped table-bordered" border="1">
        <thead>
            <tr>
                <th>People</th>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (People people in Model)
            {
                <tr>
                    <td><a href=@people.Link> @people.Name</a></td>
                    <td>@people.Description</td>
                </tr>

            }
        </tbody>
    </table>

    <a href="/Home">Home</a>
</body>

